rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             (request.auth.token.email == 'fastforreflek@gmail.com' || 
              request.auth.token.email == 'fadlinabilaazka@gmail.com');
    }
    
    // Quiz results collection
    match /quiz_results/{resultId} {
      // Anyone can read quiz results
      allow read: if true;
      
      // Authenticated users can create their own results
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      
      // Users can update/delete their own results
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      
      // Admins can do anything
      allow read, write: if isAdmin();
    }
    
    // Articles collection
    match /articles/{articleId} {
      // Anyone can read published articles
      allow read: if true;
      
      // Only admins can create, update, delete articles
      allow create, update, delete: if isAdmin();
    }
    
    // Announcements collection
    match /announcements/{announcementId} {
      // Anyone can read published announcements
      allow read: if resource.data.published == true;
      
      // Admins can read all announcements (including drafts)
      allow read: if isAdmin();
      
      // Only admins can create, update, and delete announcements
      allow create, update, delete: if isAdmin();
    }
    
    // Analytics collection (if exists)
    match /analytics/{document=**} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}
